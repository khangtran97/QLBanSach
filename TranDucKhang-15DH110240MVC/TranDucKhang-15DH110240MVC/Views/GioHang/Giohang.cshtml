@using TranDucKhang_15DH110240MVC.Models
@model List<Giohang>
@{
    ViewBag.Title = "Giohang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
<table align="center" border="1">
    <tr style="text-align:center; font-weight:bold">
        <td>Mã sách</td>
        <td style="width:100px">Tên sách</td>
        <td>Ảnh bìa</td>
        <td style="width:60px">Số lượng</td>
        <td style="width:70px">Đơn giá</td>
        <td style="width:70px">Thành tiền</td>
        <td style="width:45px"></td>
        <td></td>
        <td style="width:50px"></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold">
            <td>@item.iMasach</td>
            <td>@item.sTensach</td>
            <td><img src="~/Hinhsanpham/@item.sAnhbia"</td>
            @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @iMaSP = item.iMasach }))
            {
                <td>
                    <input type="number" min="1" name="txtSoluong" value="@item.iSoluong" style="background-color:yellow; width:60px" />
                </td>
                <td style="width:70px">@String.Format("{0:0,0}", @item.dDongia)</td>
                <td style="width:70px">@String.Format("{0:0,0}", @item.dThanhtien)</td>
                <td><a href="@Url.Action("Details","BookStore", new { id = item.iMasach })">Chi tiết</a></td>
                <td>@Html.ActionLink("Xóa", "XoaGiohang", new { @iMasp = item.iMasach })</td>
                <td><input type="submit" value="Cập nhật" /></td>
            }
        </tr>
    }
    <tr style="font-weight:bold; text-align:right; color:red">
        <td colspan="5">Số lượng sách: @ViewBag.Tongsoluong</td>
        <td colspan="5">Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ</td>
    </tr>
    <tr style="font-weight:bold; color:blue; text-align:right">
        <td colspan="9" style="text-align:center">

            @Html.ActionLink("ĐẶT HÀNG", "DatHang", "GioHang")
        </td>
    </tr>
    <tr style="font-weight:bold; color:blue; text-align:right">
        <td colspan="9" style="text-align:center">
            @Html.ActionLink("Xóa Giỏ Hàng", "XoaTatcaGiohang")
        </td>
    </tr>

</table>

